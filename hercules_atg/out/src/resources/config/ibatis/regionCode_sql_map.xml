<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="regionCode">

  <!--用于模糊查询-->
     <select id="select_regionCodeList" parameterClass="com.shiyue.bbs.model.RegionCodeQueryBean" resultClass="java.util.HashMap">
          SELECT  
		 		ID  <!---->
		  		,CODE  <!---->
		  		,NAME  <!---->
		  		,SUPER_CODE  <!---->
		  		,LEVEL  <!---->
		  		,REMARK  <!---->
		  		,REMARK1  <!---->
		  FROM REGION_CODE
		  WHERE 1=1 AND REGION_CODE.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	 
				<isNotNull property="id" prepend="and" >
				    (ID) =#id#
			    </isNotNull>
				 <isNotEmpty prepend=" and " property="code">
					(CODE) Like '%'||(#code:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="name">
					(NAME) Like '%'||(#name:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="super_code">
					(SUPER_CODE) Like '%'||(#super_code:VARCHAR#)||'%'
			    </isNotEmpty>    
				<isNotNull property="level" prepend="and" >
				    (LEVEL) =#level#
			    </isNotNull>
				 <isNotEmpty prepend=" and " property="remark">
					(REMARK) Like '%'||(#remark:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="remark1">
					(REMARK1) Like '%'||(#remark1:VARCHAR#)||'%'
			    </isNotEmpty>    
			   <isNotEmpty property="orderStr">
					$orderStr$
			   </isNotEmpty>
     </select>
     
     <!--用于查询总数-->
     <select id="select_regionCodeList_count" parameterClass="com.shiyue.bbs.model.RegionCodeQueryBean" resultClass="int">
			SELECT  count(1)
		    FROM REGION_CODE
			WHERE 1=1 AND REGION_CODE.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	
				 <isNotNull property="id" prepend="and" >
					(ID) =#id#
				 </isNotNull>
				 <isNotEmpty prepend=" and " property="code">
					(CODE) Like '%'||(#code:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="name">
					(NAME) Like '%'||(#name:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="super_code">
					(SUPER_CODE) Like '%'||(#super_code:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotNull property="level" prepend="and" >
					(LEVEL) =#level#
				 </isNotNull>
				 <isNotEmpty prepend=" and " property="remark">
					(REMARK) Like '%'||(#remark:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="remark1">
					(REMARK1) Like '%'||(#remark1:VARCHAR#)||'%'
			    </isNotEmpty>    
	 </select>


</sqlMap>