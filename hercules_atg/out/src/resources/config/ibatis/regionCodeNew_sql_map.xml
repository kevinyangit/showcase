<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="regionCodeNew">

  <!--用于模糊查询-->
     <select id="select_regionCodeNewList" parameterClass="com.shiyue.bbs.model.RegionCodeNewQueryBean" resultClass="java.util.HashMap">
          SELECT  
		 		ID  <!--自增长-->
		  		,CODE  <!--地区代码-->
		  		,NAME  <!--地区名称-->
		  		,LEVEL  <!--地区等级
            1省，直辖市
            2市级
            3区县级
            -->
		  		,SUPER_CODE  <!--上级地区CODE-->
		  		,REMARK  <!--备注-->
		  FROM REGION_CODE_NEW
		  WHERE 1=1 AND REGION_CODE_NEW.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	 
				<isNotNull property="id" prepend="and" >
				    (ID) =#id#
			    </isNotNull>
				 <isNotEmpty prepend=" and " property="code">
					(CODE) Like '%'||(#code:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="name">
					(NAME) Like '%'||(#name:VARCHAR#)||'%'
			    </isNotEmpty>    
				<isNotNull property="level" prepend="and" >
				    (LEVEL) =#level#
			    </isNotNull>
				 <isNotEmpty prepend=" and " property="super_code">
					(SUPER_CODE) Like '%'||(#super_code:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="remark">
					(REMARK) Like '%'||(#remark:VARCHAR#)||'%'
			    </isNotEmpty>    
			   <isNotEmpty property="orderStr">
					$orderStr$
			   </isNotEmpty>
     </select>
     
     <!--用于查询总数-->
     <select id="select_regionCodeNewList_count" parameterClass="com.shiyue.bbs.model.RegionCodeNewQueryBean" resultClass="int">
			SELECT  count(1)
		    FROM REGION_CODE_NEW
			WHERE 1=1 AND REGION_CODE_NEW.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	
				 <isNotNull property="id" prepend="and" >
					(ID) =#id#
				 </isNotNull>
				 <isNotEmpty prepend=" and " property="code">
					(CODE) Like '%'||(#code:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="name">
					(NAME) Like '%'||(#name:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotNull property="level" prepend="and" >
					(LEVEL) =#level#
				 </isNotNull>
				 <isNotEmpty prepend=" and " property="super_code">
					(SUPER_CODE) Like '%'||(#super_code:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="remark">
					(REMARK) Like '%'||(#remark:VARCHAR#)||'%'
			    </isNotEmpty>    
	 </select>


</sqlMap>