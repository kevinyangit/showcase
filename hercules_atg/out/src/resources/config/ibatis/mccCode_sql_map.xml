<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="mccCode">

  <!--用于模糊查询-->
     <select id="select_mccCodeList" parameterClass="com.shiyue.bbs.model.MccCodeQueryBean" resultClass="java.util.HashMap">
          SELECT  
		 		ID  <!---->
		  		,REMARK  <!---->
		  		,PROFIT  <!---->
		  		,DESC  <!---->
		  		,MCC  <!---->
		  FROM MCC_CODE
		  WHERE 1=1 AND MCC_CODE.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	 
				 <isNotEmpty prepend=" and " property="remark">
					(REMARK) Like '%'||(#remark:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="profit">
					(PROFIT) Like '%'||(#profit:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="desc">
					(DESC) Like '%'||(#desc:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="mcc">
					(MCC) Like '%'||(#mcc:VARCHAR#)||'%'
			    </isNotEmpty>    
				<isNotNull property="id" prepend="and" >
				    (ID) =#id#
			    </isNotNull>
			   <isNotEmpty property="orderStr">
					$orderStr$
			   </isNotEmpty>
     </select>
     
     <!--用于查询总数-->
     <select id="select_mccCodeList_count" parameterClass="com.shiyue.bbs.model.MccCodeQueryBean" resultClass="int">
			SELECT  count(1)
		    FROM MCC_CODE
			WHERE 1=1 AND MCC_CODE.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	
				 <isNotEmpty prepend=" and " property="remark">
					(REMARK) Like '%'||(#remark:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="profit">
					(PROFIT) Like '%'||(#profit:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="desc">
					(DESC) Like '%'||(#desc:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="mcc">
					(MCC) Like '%'||(#mcc:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotNull property="id" prepend="and" >
					(ID) =#id#
				 </isNotNull>
	 </select>


</sqlMap>