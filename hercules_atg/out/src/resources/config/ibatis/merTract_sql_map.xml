<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="merTract">

  <!--用于模糊查询-->
     <select id="select_merTractList" parameterClass="com.shiyue.bbs.model.MerTractQueryBean" resultClass="java.util.HashMap">
          SELECT  
		 		ID  <!---->
		  		,MER_SYS_ID  <!---->
		  		,TRACT_ID  <!---->
		  		,PROFIT_TYPE  <!---->
		  		,DEFALUT_STATUS  <!---->
		  		,STATUS  <!---->
		  		,RESERVED  <!---->
		  FROM MER_TRACT
		  WHERE 1=1 AND MER_TRACT.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	 
				<isNotNull property="id" prepend="and" >
				    (ID) =#id#
			    </isNotNull>
				<isNotNull property="mer_sys_id" prepend="and" >
				    (MER_SYS_ID) =#mer_sys_id#
			    </isNotNull>
				<isNotNull property="tract_id" prepend="and" >
				    (TRACT_ID) =#tract_id#
			    </isNotNull>
				 <isNotEmpty prepend=" and " property="profit_type">
					(PROFIT_TYPE) Like '%'||(#profit_type:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="defalut_status">
					(DEFALUT_STATUS) Like '%'||(#defalut_status:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="status">
					(STATUS) Like '%'||(#status:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="reserved">
					(RESERVED) Like '%'||(#reserved:VARCHAR#)||'%'
			    </isNotEmpty>    
			   <isNotEmpty property="orderStr">
					$orderStr$
			   </isNotEmpty>
     </select>
     
     <!--用于查询总数-->
     <select id="select_merTractList_count" parameterClass="com.shiyue.bbs.model.MerTractQueryBean" resultClass="int">
			SELECT  count(1)
		    FROM MER_TRACT
			WHERE 1=1 AND MER_TRACT.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	
				 <isNotNull property="id" prepend="and" >
					(ID) =#id#
				 </isNotNull>
				 <isNotNull property="mer_sys_id" prepend="and" >
					(MER_SYS_ID) =#mer_sys_id#
				 </isNotNull>
				 <isNotNull property="tract_id" prepend="and" >
					(TRACT_ID) =#tract_id#
				 </isNotNull>
				 <isNotEmpty prepend=" and " property="profit_type">
					(PROFIT_TYPE) Like '%'||(#profit_type:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="defalut_status">
					(DEFALUT_STATUS) Like '%'||(#defalut_status:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="status">
					(STATUS) Like '%'||(#status:VARCHAR#)||'%'
			    </isNotEmpty>    
				 <isNotEmpty prepend=" and " property="reserved">
					(RESERVED) Like '%'||(#reserved:VARCHAR#)||'%'
			    </isNotEmpty>    
	 </select>


</sqlMap>