<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="testCopy">

  <!--用于模糊查询-->
     <select id="select_testCopyList" parameterClass="com.shiyue.bbs.model.TestCopyQueryBean" resultClass="java.util.HashMap">
          SELECT  
		 		ID  <!---->
		  		,TSN  <!---->
		  FROM TEST_copy
		  WHERE 1=1 AND TEST_copy.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	 
				<isNotNull property="id" prepend="and" >
				    (ID) =#id#
			    </isNotNull>
				<isNotNull property="tsn" prepend="and" >
				    (TSN) =#tsn#
			    </isNotNull>
			   <isNotEmpty property="orderStr">
					$orderStr$
			   </isNotEmpty>
     </select>
     
     <!--用于查询总数-->
     <select id="select_testCopyList_count" parameterClass="com.shiyue.bbs.model.TestCopyQueryBean" resultClass="int">
			SELECT  count(1)
		    FROM TEST_copy
			WHERE 1=1 AND TEST_copy.END_DATE=TO_DATE('9999-12-31', 'yyyy-MM-dd')	
				 <isNotNull property="id" prepend="and" >
					(ID) =#id#
				 </isNotNull>
				 <isNotNull property="tsn" prepend="and" >
					(TSN) =#tsn#
				 </isNotNull>
	 </select>


</sqlMap>