<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_orderInfo"  extends="struts_common">
	  
	  	<!-- OrderInfo列表信息 -->
        <action name="searchOrderInfoAction" class="searchOrderInfoAction">
			<result name="success" >/jsp/demo/searchOrderInfoPage.jsp</result>
		</action>
		
        <!-- OrderInfo新增页面-->
        <action name="addOrderInfoPage" class="addOrderInfoPage">
			<result name="success" >/jsp/demo/addOrderInfoPage.jsp</result>
		</action>
		
		<!-- OrderInfo新增动作	-->
        <action name="addOrderInfoAction" class="addOrderInfoAction"> 
			<result name="success" type="chain"><param name="actionName">searchOrderInfoAction</param> </result>
		</action>
		
		<!-- OrderInfo编辑页面 -->
		<action name="editOrderInfoPage" class="editOrderInfoPage">
			<result name="success" >/jsp/demo/editOrderInfoPage.jsp</result>
		</action>

		
		<!-- OrderInfo编辑动作-->
		<action name="editOrderInfoAction" class="editOrderInfoAction">
			<result name="success" type="chain"><param name="actionName">searchOrderInfoAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailOrderInfoPage" class="detailOrderInfoPage">
			<result name="success" >/jsp/demo/detailOrderInfoPage.jsp</result>
		</action>
		
		
		<!-- OrderInfo删除页面	-->
		<action name="delOrderInfoAction" class="delOrderInfoAction">
			<result name="success" type="chain"><param name="actionName">searchOrderInfoAction</param> </result>
		</action>		

      
	</package>
</struts>