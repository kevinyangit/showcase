<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_bankCode"  extends="struts_common">
	  
	  	<!-- BankCode列表信息 -->
        <action name="searchBankCodeAction" class="searchBankCodeAction">
			<result name="success" >/jsp/demo/searchBankCodePage.jsp</result>
		</action>
		
        <!-- BankCode新增页面-->
        <action name="addBankCodePage" class="addBankCodePage">
			<result name="success" >/jsp/demo/addBankCodePage.jsp</result>
		</action>
		
		<!-- BankCode新增动作	-->
        <action name="addBankCodeAction" class="addBankCodeAction"> 
			<result name="success" type="chain"><param name="actionName">searchBankCodeAction</param> </result>
		</action>
		
		<!-- BankCode编辑页面 -->
		<action name="editBankCodePage" class="editBankCodePage">
			<result name="success" >/jsp/demo/editBankCodePage.jsp</result>
		</action>

		
		<!-- BankCode编辑动作-->
		<action name="editBankCodeAction" class="editBankCodeAction">
			<result name="success" type="chain"><param name="actionName">searchBankCodeAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailBankCodePage" class="detailBankCodePage">
			<result name="success" >/jsp/demo/detailBankCodePage.jsp</result>
		</action>
		
		
		<!-- BankCode删除页面	-->
		<action name="delBankCodeAction" class="delBankCodeAction">
			<result name="success" type="chain"><param name="actionName">searchBankCodeAction</param> </result>
		</action>		

      
	</package>
</struts>