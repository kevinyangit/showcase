<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_test"  extends="struts_common">
	  
	  	<!-- Test列表信息 -->
        <action name="searchTestAction" class="searchTestAction">
			<result name="success" >/jsp/demo/searchTestPage.jsp</result>
		</action>
		
        <!-- Test新增页面-->
        <action name="addTestPage" class="addTestPage">
			<result name="success" >/jsp/demo/addTestPage.jsp</result>
		</action>
		
		<!-- Test新增动作	-->
        <action name="addTestAction" class="addTestAction"> 
			<result name="success" type="chain"><param name="actionName">searchTestAction</param> </result>
		</action>
		
		<!-- Test编辑页面 -->
		<action name="editTestPage" class="editTestPage">
			<result name="success" >/jsp/demo/editTestPage.jsp</result>
		</action>

		
		<!-- Test编辑动作-->
		<action name="editTestAction" class="editTestAction">
			<result name="success" type="chain"><param name="actionName">searchTestAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailTestPage" class="detailTestPage">
			<result name="success" >/jsp/demo/detailTestPage.jsp</result>
		</action>
		
		
		<!-- Test删除页面	-->
		<action name="delTestAction" class="delTestAction">
			<result name="success" type="chain"><param name="actionName">searchTestAction</param> </result>
		</action>		

      
	</package>
</struts>