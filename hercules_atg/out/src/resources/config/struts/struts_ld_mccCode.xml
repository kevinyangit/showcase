<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_mccCode"  extends="struts_common">
	  
	  	<!-- MccCode列表信息 -->
        <action name="searchMccCodeAction" class="searchMccCodeAction">
			<result name="success" >/jsp/demo/searchMccCodePage.jsp</result>
		</action>
		
        <!-- MccCode新增页面-->
        <action name="addMccCodePage" class="addMccCodePage">
			<result name="success" >/jsp/demo/addMccCodePage.jsp</result>
		</action>
		
		<!-- MccCode新增动作	-->
        <action name="addMccCodeAction" class="addMccCodeAction"> 
			<result name="success" type="chain"><param name="actionName">searchMccCodeAction</param> </result>
		</action>
		
		<!-- MccCode编辑页面 -->
		<action name="editMccCodePage" class="editMccCodePage">
			<result name="success" >/jsp/demo/editMccCodePage.jsp</result>
		</action>

		
		<!-- MccCode编辑动作-->
		<action name="editMccCodeAction" class="editMccCodeAction">
			<result name="success" type="chain"><param name="actionName">searchMccCodeAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailMccCodePage" class="detailMccCodePage">
			<result name="success" >/jsp/demo/detailMccCodePage.jsp</result>
		</action>
		
		
		<!-- MccCode删除页面	-->
		<action name="delMccCodeAction" class="delMccCodeAction">
			<result name="success" type="chain"><param name="actionName">searchMccCodeAction</param> </result>
		</action>		

      
	</package>
</struts>