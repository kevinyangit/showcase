<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_merAccount"  extends="struts_common">
	  
	  	<!-- MerAccount列表信息 -->
        <action name="searchMerAccountAction" class="searchMerAccountAction">
			<result name="success" >/jsp/demo/searchMerAccountPage.jsp</result>
		</action>
		
        <!-- MerAccount新增页面-->
        <action name="addMerAccountPage" class="addMerAccountPage">
			<result name="success" >/jsp/demo/addMerAccountPage.jsp</result>
		</action>
		
		<!-- MerAccount新增动作	-->
        <action name="addMerAccountAction" class="addMerAccountAction"> 
			<result name="success" type="chain"><param name="actionName">searchMerAccountAction</param> </result>
		</action>
		
		<!-- MerAccount编辑页面 -->
		<action name="editMerAccountPage" class="editMerAccountPage">
			<result name="success" >/jsp/demo/editMerAccountPage.jsp</result>
		</action>

		
		<!-- MerAccount编辑动作-->
		<action name="editMerAccountAction" class="editMerAccountAction">
			<result name="success" type="chain"><param name="actionName">searchMerAccountAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailMerAccountPage" class="detailMerAccountPage">
			<result name="success" >/jsp/demo/detailMerAccountPage.jsp</result>
		</action>
		
		
		<!-- MerAccount删除页面	-->
		<action name="delMerAccountAction" class="delMerAccountAction">
			<result name="success" type="chain"><param name="actionName">searchMerAccountAction</param> </result>
		</action>		

      
	</package>
</struts>