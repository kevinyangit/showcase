<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_picMessage"  extends="struts_common">
	  
	  	<!-- PicMessage列表信息 -->
        <action name="searchPicMessageAction" class="searchPicMessageAction">
			<result name="success" >/jsp/demo/searchPicMessagePage.jsp</result>
		</action>
		
        <!-- PicMessage新增页面-->
        <action name="addPicMessagePage" class="addPicMessagePage">
			<result name="success" >/jsp/demo/addPicMessagePage.jsp</result>
		</action>
		
		<!-- PicMessage新增动作	-->
        <action name="addPicMessageAction" class="addPicMessageAction"> 
			<result name="success" type="chain"><param name="actionName">searchPicMessageAction</param> </result>
		</action>
		
		<!-- PicMessage编辑页面 -->
		<action name="editPicMessagePage" class="editPicMessagePage">
			<result name="success" >/jsp/demo/editPicMessagePage.jsp</result>
		</action>

		
		<!-- PicMessage编辑动作-->
		<action name="editPicMessageAction" class="editPicMessageAction">
			<result name="success" type="chain"><param name="actionName">searchPicMessageAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailPicMessagePage" class="detailPicMessagePage">
			<result name="success" >/jsp/demo/detailPicMessagePage.jsp</result>
		</action>
		
		
		<!-- PicMessage删除页面	-->
		<action name="delPicMessageAction" class="delPicMessageAction">
			<result name="success" type="chain"><param name="actionName">searchPicMessageAction</param> </result>
		</action>		

      
	</package>
</struts>