<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_payInfo"  extends="struts_common">
	  
	  	<!-- PayInfo列表信息 -->
        <action name="searchPayInfoAction" class="searchPayInfoAction">
			<result name="success" >/jsp/demo/searchPayInfoPage.jsp</result>
		</action>
		
        <!-- PayInfo新增页面-->
        <action name="addPayInfoPage" class="addPayInfoPage">
			<result name="success" >/jsp/demo/addPayInfoPage.jsp</result>
		</action>
		
		<!-- PayInfo新增动作	-->
        <action name="addPayInfoAction" class="addPayInfoAction"> 
			<result name="success" type="chain"><param name="actionName">searchPayInfoAction</param> </result>
		</action>
		
		<!-- PayInfo编辑页面 -->
		<action name="editPayInfoPage" class="editPayInfoPage">
			<result name="success" >/jsp/demo/editPayInfoPage.jsp</result>
		</action>

		
		<!-- PayInfo编辑动作-->
		<action name="editPayInfoAction" class="editPayInfoAction">
			<result name="success" type="chain"><param name="actionName">searchPayInfoAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailPayInfoPage" class="detailPayInfoPage">
			<result name="success" >/jsp/demo/detailPayInfoPage.jsp</result>
		</action>
		
		
		<!-- PayInfo删除页面	-->
		<action name="delPayInfoAction" class="delPayInfoAction">
			<result name="success" type="chain"><param name="actionName">searchPayInfoAction</param> </result>
		</action>		

      
	</package>
</struts>