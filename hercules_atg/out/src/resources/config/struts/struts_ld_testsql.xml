<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_testsql"  extends="struts_common">
	  
	  	<!-- Testsql列表信息 -->
        <action name="searchTestsqlAction" class="searchTestsqlAction">
			<result name="success" >/jsp/demo/searchTestsqlPage.jsp</result>
		</action>
		
        <!-- Testsql新增页面-->
        <action name="addTestsqlPage" class="addTestsqlPage">
			<result name="success" >/jsp/demo/addTestsqlPage.jsp</result>
		</action>
		
		<!-- Testsql新增动作	-->
        <action name="addTestsqlAction" class="addTestsqlAction"> 
			<result name="success" type="chain"><param name="actionName">searchTestsqlAction</param> </result>
		</action>
		
		<!-- Testsql编辑页面 -->
		<action name="editTestsqlPage" class="editTestsqlPage">
			<result name="success" >/jsp/demo/editTestsqlPage.jsp</result>
		</action>

		
		<!-- Testsql编辑动作-->
		<action name="editTestsqlAction" class="editTestsqlAction">
			<result name="success" type="chain"><param name="actionName">searchTestsqlAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailTestsqlPage" class="detailTestsqlPage">
			<result name="success" >/jsp/demo/detailTestsqlPage.jsp</result>
		</action>
		
		
		<!-- Testsql删除页面	-->
		<action name="delTestsqlAction" class="delTestsqlAction">
			<result name="success" type="chain"><param name="actionName">searchTestsqlAction</param> </result>
		</action>		

      
	</package>
</struts>