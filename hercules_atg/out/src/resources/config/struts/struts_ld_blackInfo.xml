<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="false" />
	<package name="struts_ld_blackInfo"  extends="struts_common">
	  
	  	<!-- BlackInfo列表信息 -->
        <action name="searchBlackInfoAction" class="searchBlackInfoAction">
			<result name="success" >/jsp/demo/searchBlackInfoPage.jsp</result>
		</action>
		
        <!-- BlackInfo新增页面-->
        <action name="addBlackInfoPage" class="addBlackInfoPage">
			<result name="success" >/jsp/demo/addBlackInfoPage.jsp</result>
		</action>
		
		<!-- BlackInfo新增动作	-->
        <action name="addBlackInfoAction" class="addBlackInfoAction"> 
			<result name="success" type="chain"><param name="actionName">searchBlackInfoAction</param> </result>
		</action>
		
		<!-- BlackInfo编辑页面 -->
		<action name="editBlackInfoPage" class="editBlackInfoPage">
			<result name="success" >/jsp/demo/editBlackInfoPage.jsp</result>
		</action>

		
		<!-- BlackInfo编辑动作-->
		<action name="editBlackInfoAction" class="editBlackInfoAction">
			<result name="success" type="chain"><param name="actionName">searchBlackInfoAction</param> </result>
			<result name="input">/jsp/demo/error.jsp</result>
		</action>
		
		
		<!-- 详细画面动作-->
		<action name="detailBlackInfoPage" class="detailBlackInfoPage">
			<result name="success" >/jsp/demo/detailBlackInfoPage.jsp</result>
		</action>
		
		
		<!-- BlackInfo删除页面	-->
		<action name="delBlackInfoAction" class="delBlackInfoAction">
			<result name="success" type="chain"><param name="actionName">searchBlackInfoAction</param> </result>
		</action>		

      
	</package>
</struts>